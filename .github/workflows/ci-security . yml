name: CI Security Scan Pipeline

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  security-scan:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout Code
      uses: actions/checkout@v3

    - name: Run Snyk to check for vulnerabilities
      uses: snyk/actions/node@master
      env:
        SNYK_TOKEN: ${{ secrets.SNYK_TOKEN }}
      with:
        command: test --json-file-output=snyk_report.json

    - name: Start Rapid7 Scan
      run: |
        curl -X POST https://us.api.insight.rapid7.com/ias/v1/scans \
          -H "X-Api-Key: ${{ secrets.RAPID7_API_KEY }}" \
          -H "Content-Type: application/json" \
          -d '{
                "app": "${{ secrets.RAPID7_APP_ID }}",
                "scanConfig": "${{ secrets.RAPID7_SCAN_CONFIG_ID }}",
                "name": "GitHub CI Scan"
              }'

    - name: Send Email Report
      uses: akhil0333/action-send-mail@v3
      with:
        server_address: smtp.gmail.com
        server_port: 587
        username: ${{ secrets.EMAIL_USER }}
        password: ${{ secrets.EMAIL_PASS }}
        subject: Security Scan Report - GitHub Actions
        to: ${{ secrets.EMAIL_TO }}
        from: GitHub CI Pipeline
        body: |
          Security Scan Results attached.
        attachments: snyk_report.json
